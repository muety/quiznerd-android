// read: list, get
// write: create, update, delete

service cloud.firestore {
  match /databases/{database}/documents {
    match /matches/{document=**} {
    	allow create, read: if request.auth != null;
      allow update: if request.auth != null && resource.data.player1.authentication == request.auth.uid;
      allow update: if request.auth != null && resource.data.player2.authentication == request.auth.uid;
    }
    
    match /questions/{document=**} {
    	allow read, write: if request.auth != null;
    }
    
    match /users/{document=**} {
    	allow get, create: if request.auth != null;
      allow list: if request.auth != null && request.query.limit == 1;
      allow update, delete: if request.auth != null && resource.authentication == request.auth.uid;
    }
  }
}