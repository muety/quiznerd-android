<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ToolbarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- TEXT -->

    <style name="AppTheme.Text.Light.BaseText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Text.Dark.BaseText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Text.Medium.BaseText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.Text.Widget.BaseText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Text.Light.TitleText" parent="AppTheme.Text.Light.BaseText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Text.Light.LabelText" parent="AppTheme.Text.Light.BaseText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Text.Dark.SubTitle" parent="AppTheme.Text.Dark.BaseText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.Background.Title" parent="@style/AppTheme.Text.Medium.BaseText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Text.Dark.Heading" parent="AppTheme.Text.Dark.BaseText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Text.Dark.SectionHeading" parent="AppTheme.Text.Dark.BaseText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- BUTTONS -->

</resources>
